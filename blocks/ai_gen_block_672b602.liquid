      "type": "range",
      "id": "heading_spacing_desktop",
      "min": 16,
      "max": 60,
      "step": 2,
      "unit": "px",
      "label": "Space below heading (desktop)",
      "default": 24
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Color",
      "default": "#000000"
    },
    {
      "type": "header",
      "content": "Description style"
    },
    {
      "type": "range",
      "id": "text_size_mobile",
      "min": 12,
      "max": 20,
      "step": 1,
      "unit": "px",
      "label": "Size (mobile)",
      "default": 14
    },
    {
      "type": "range",
      "id": "text_size_desktop",
      "min": 14,
      "max": 24,
      "step": 1,
      "unit": "px",
      "label": "Size (desktop)",
      "default": 16
    },
    {
      "type": "range",
      "id": "text_line_height",
      "min": 1.2,
      "max": 2,
      "step": 0.1,
      "unit": "em",
