{% doc %}
  @prompt
    Create a brand value section for a fashion Shopify store.
    
    Layout:
    
    Top: large lifestyle image (clothing on hangers in a boutique, soft natural light)
    
    Below image: short bold headline
    
    Under headline: short paragraph of brand description
    
    Style:
    
    Clean, minimal, premium
    
    Plenty of white space
    
    Center-aligned text
    
    Modern fashion-store look
    
    Behavior:
    
    Fully responsive
    
    Image scales nicely on mobile
    
    Text remains readable and compact
    
    Purpose:
    
    Communicate quality, craftsmanship, and brand values
    
    Build trust and premium perception
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-brand-value-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.section_padding_mobile }}px 20px;
  }

  @media screen and (min-width: 750px) {
    .ai-brand-value-{{ ai_gen_id }} {
      padding: {{ block.settings.section_padding_desktop }}px 40px;
    }
  }

  .ai-brand-value__container-{{ ai_gen_id }} {
    max-width: {{ block.settings.content_max_width }}px;
    margin: 0 auto;
    width: 100%;
  }

  .ai-brand-value__image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    margin-bottom: {{ block.settings.spacing_mobile }}px;
    overflow: hidden;
    border-radius: {{ block.settings.image_border_radius }}px;
  }

  @media screen and (min-width: 750px) {
    .ai-brand-value__image-wrapper-{{ ai_gen_id }} {
      margin-bottom: {{ block.settings.spacing_desktop }}px;
    }
  }

  .ai-brand-value__image-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    display: block;
    object-fit: cover;
  }

  .ai-brand-value__image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    aspect-ratio: 16 / 9;
    background-color: #f5f5f5;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-brand-value__image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 400px;
    max-height: 400px;
    opacity: 0.3;
  }

  .ai-brand-value__empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 30px;
    left: 50%;
    transform: translateX(-50%);
    font-size: 14px;
    color: #999;
    text-align: center;
    pointer-events: none;
  }

  .ai-brand-value__content-{{ ai_gen_id }} {
    text-align: center;
    max-width: {{ block.settings.text_max_width }}px;
    margin: 0 auto;
  }

  .ai-brand-value__heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size_mobile }}px;
    font-weight: {{ block.settings.heading_weight }};
    color: {{ block.settings.heading_color }};
    margin: 0 0 {{ block.settings.heading_spacing_mobile }}px 0;
    line-height: 1.2;
    letter-spacing: 0.05em;
    text-transform: {{ block.settings.heading_transform }};
  }

  @media screen and (min-width: 750px) {
    .ai-brand-value__heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size_desktop }}px;
      margin-bottom: {{ block.settings.heading_spacing_desktop }}px;
    }
  }

  .ai-brand-value__description-{{ ai_gen_id }} {
    font-size: {{ block.settings.text_size_mobile }}px;
    line-height: {{ block.settings.text_line_height }};
    color: {{ block.settings.text_color }};
    margin: 0;
    letter-spacing: 0.01em;
  }

  @media screen and (min-width: 750px) {
    .ai-brand-value__description-{{ ai_gen_id }} {
      font-size: {{ block.settings.text_size_desktop }}px;
    }
  }

  .ai-brand-value__description-{{ ai_gen_id }} p {
    margin: 0 0 1em 0;
  }

  .ai-brand-value__description-{{ ai_gen_id }} p:last-child {
    margin-bottom: 0;
  }
{% endstyle %}

<div class="ai-brand-value-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-brand-value__container-{{ ai_gen_id }}">
    <div class="ai-brand-value__image-wrapper-{{ ai_gen_id }}">
      {% if block.settings.image %}
        <img
          src="{{ block.settings.image | image_url: width: 2000 }}"
          alt="{{ block.settings.image.alt | escape }}"
          loading="lazy"
          width="{{ block.settings.image.width }}"
          height="{{ block.settings.image.height }}"
          class="ai-brand-value__image-{{ ai_gen_id }}"
        >
      {% else %}
        <div class="ai-brand-value__image-placeholder-{{ ai_gen_id }}">
          {{ 'lifestyle-1' | placeholder_svg_tag }}
          <div class="ai-brand-value__empty-state-{{ ai_gen_id }}">
            Add a lifestyle image to showcase your brand
          </div>
        </div>
      {% endif %}
    </div>

    <div class="ai-brand-value__content-{{ ai_gen_id }}">
      {% if block.settings.heading != blank %}
        <h2 class="ai-brand-value__heading-{{ ai_gen_id }}">
          {{ block.settings.heading }}
        </h2>
      {% endif %}

      {% if block.settings.description != blank %}
        <div class="ai-brand-value__description-{{ ai_gen_id }}">
          {{ block.settings.description }}
        </div>
      {% endif %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Brand value section",
  "tag": null,
  "settings": [
    {
      "type": "header",
      "content": "Image"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Lifestyle image"
    },
    {
      "type": "range",
      "id": "image_border_radius",
      "min": 0,
      "max": 40,
      "step": 4,
      "unit": "px",
      "label": "Image corner radius",
      "default": 0
    },
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "inline_richtext",
      "id": "heading",
      "label": "Heading",
      "default": "Crafted with Purpose"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description",
      "default": "<p>Every piece in our collection is thoughtfully designed and ethically crafted. We believe in quality over quantity, creating timeless garments that honor both craftsmanship and sustainability.</p>"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "range",
      "id": "content_max_width",
      "min": 600,
      "max": 1400,
      "step": 50,
      "unit": "px",
      "label": "Content width",
      "default": 1000
    },
    {
      "type": "range",
      "id": "text_max_width",
      "min": 400,
      "max": 800,
      "step": 50,
      "unit": "px",
      "label": "Text width",
      "default": 600
    },
    {
      "type": "range",
      "id": "spacing_mobile",
      "min": 20,
      "max": 60,
      "step": 4,
      "unit": "px",
      "label": "Space between image and text (mobile)",
      "default": 32
    },
    {
      "type": "range",
      "id": "spacing_desktop",
      "min": 30,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Space between image and text (desktop)",
      "default": 50
    },
    {
      "type": "range",
      "id": "section_padding_mobile",
      "min": 20,
      "max": 80,
      "step": 4,
      "unit": "px",
      "label": "Section padding (mobile)",
      "default": 40
    },
    {
      "type": "range",
      "id": "section_padding_desktop",
      "min": 40,
      "max": 120,
      "step": 5,
      "unit": "px",
      "label": "Section padding (desktop)",
      "default": 80
    },
    {
      "type": "header",
      "content": "Heading style"
    },
    {
      "type": "range",
      "id": "heading_size_mobile",
      "min": 20,
      "max": 50,
      "step": 2,
      "unit": "px",
      "label": "Size (mobile)",
      "default": 28
    },
    {
      "type": "range",
      "id": "heading_size_desktop",
      "min": 24,
      "max": 80,
      "step": 2,
      "unit": "px",
      "label": "Size (desktop)",
      "default": 42
    },
    {
      "type": "select",
      "id": "heading_weight",
      "label": "Weight",
      "options": [
        { "value": "400", "label": "Normal" },
        { "value": "500", "label": "Medium" },
        { "value": "600", "label": "Semi-bold" },
        { "value": "700", "label": "Bold" }
      ],
      "default": "700"
    },
    {
      "type": "select",
      "id": "heading_transform",
      "label": "Text transform",
      "options": [
        { "value": "none", "label": "None" },
        { "value": "uppercase", "label": "Uppercase" },
        { "value": "lowercase", "label": "Lowercase" }
      ],
      "default": "uppercase"
    },
    {
      "type": "range",
      "id": "heading_spacing_mobile",
      "min": 12,
      "max": 40,
      "step": 2,
      "unit": "px",
      "label": "Space below heading (mobile)",
      "default": 16
    },
