{% doc %}
  @prompt
    A compact social proof bar showing:
    
    small round customer avatars on the left
    
    a short trust sentence on the right
    
    styled like a Facebook / Instagram social proof line
    
    clean, minimal, inline layout
    
    optimized for mobile first, Layout:
    
    On the left: 2â€“3 small circular avatar images (overlapping slightly).
    
    On the right: a short text line with bold names at the beginning.
    
    Text style:
    
    Clean, modern, minimal
    
    Sans-serif font
    
    No borders
    
    Subtle spacing
    
    Behavior:
    
    Fully responsive
    
    On mobile, avatars stay left and text wraps nicely
    
    Purpose:
    
    Show trust and popularity (many people wear the brand)
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-social-proof-{{ ai_gen_id }} {
    display: block;
    width: 100%;
  }

  .ai-social-proof-container-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 14px;
    padding: {{ block.settings.padding }}px;
    background-color: {{ block.settings.background_color }};
    width: 100%;
  }

  .ai-social-proof-avatars-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    flex-shrink: 0;
  }

  .ai-social-proof-avatar-{{ ai_gen_id }} {
    width: {{ block.settings.avatar_size }}px;
    height: {{ block.settings.avatar_size }}px;
    border-radius: 50%;
    border: 2px solid {{ block.settings.background_color }};
    object-fit: cover;
    margin-left: -10px;
  }

  .ai-social-proof-avatar-{{ ai_gen_id }}:first-child {
    margin-left: 0;
  }

  .ai-social-proof-avatar-placeholder-{{ ai_gen_id }} {
    width: {{ block.settings.avatar_size }}px;
    height: {{ block.settings.avatar_size }}px;
    border-radius: 50%;
    border: 2px solid {{ block.settings.background_color }};
    background-color: {{ block.settings.placeholder_color }};
    display: flex;
    align-items: center;
    justify-content: center;
    margin-left: -10px;
    flex-shrink: 0;
  }

  .ai-social-proof-avatar-placeholder-{{ ai_gen_id }}:first-child {
    margin-left: 0;
  }

  .ai-social-proof-avatar-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.5;
  }

  .ai-social-proof-text-{{ ai_gen_id }} {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
    font-size: {{ block.settings.text_size }}px;
    line-height: 1.5;
    color: {{ block.settings.text_color }};
    margin: 0;
    flex-grow: 1;
  }

  .ai-social-proof-text-{{ ai_gen_id }} strong {
    font-weight: 600;
  }

  @media screen and (max-width: 749px) {
    .ai-social-proof-container-{{ ai_gen_id }} {
      gap: 12px;
    }

    .ai-social-proof-avatar-{{ ai_gen_id }} {
      width: {{ block.settings.avatar_size | times: 0.9 }}px;
      height: {{ block.settings.avatar_size | times: 0.9 }}px;
      margin-left: -8px;
    }

    .ai-social-proof-avatar-{{ ai_gen_id }}:first-child {
      margin-left: 0;
    }

    .ai-social-proof-avatar-placeholder-{{ ai_gen_id }} {
      width: {{ block.settings.avatar_size | times: 0.9 }}px;
      height: {{ block.settings.avatar_size | times: 0.9 }}px;
      margin-left: -8px;
    }

    .ai-social-proof-avatar-placeholder-{{ ai_gen_id }}:first-child {
      margin-left: 0;
    }

    .ai-social-proof-text-{{ ai_gen_id }} {
      font-size: {{ block.settings.text_size | times: 0.95 }}px;
    }
  }
{% endstyle %}

<social-proof-{{ ai_gen_id }} class="ai-social-proof-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-social-proof-container-{{ ai_gen_id }}">
    <div class="ai-social-proof-avatars-{{ ai_gen_id }}">
      {% if block.settings.avatar_1 != blank %}
        <img
          src="{{ block.settings.avatar_1 | image_url: width: 100 }}"
          alt="Customer"
          class="ai-social-proof-avatar-{{ ai_gen_id }}"
          loading="lazy"
          width="100"
          height="100"
        >
      {% else %}
        <div class="ai-social-proof-avatar-placeholder-{{ ai_gen_id }}">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
            <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
          </svg>
        </div>
      {% endif %}

      {% if block.settings.avatar_2 != blank %}
        <img
          src="{{ block.settings.avatar_2 | image_url: width: 100 }}"
          alt="Customer"
          class="ai-social-proof-avatar-{{ ai_gen_id }}"
          loading="lazy"
          width="100"
          height="100"
        >
      {% else %}
        <div class="ai-social-proof-avatar-placeholder-{{ ai_gen_id }}">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
            <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
          </svg>
        </div>
      {% endif %}

      {% if block.settings.show_third_avatar %}
        {% if block.settings.avatar_3 != blank %}
          <img
            src="{{ block.settings.avatar_3 | image_url: width: 100 }}"
            alt="Customer"
            class="ai-social-proof-avatar-{{ ai_gen_id }}"
            loading="lazy"
            width="100"
            height="100"
          >
        {% else %}
          <div class="ai-social-proof-avatar-placeholder-{{ ai_gen_id }}">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
              <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
            </svg>
          </div>
        {% endif %}
      {% endif %}
    </div>

    <p class="ai-social-proof-text-{{ ai_gen_id }}">
      {{ block.settings.trust_message }}
    </p>
  </div>
</social-proof-{{ ai_gen_id }}>

<script>
  (function() {
    class SocialProof{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }
    }

    customElements.define('social-proof-{{ ai_gen_id }}', SocialProof{{ ai_gen_id }});
  })();
</script>

{% schema %}
{
  "name": "Social proof bar",
  "tag": null,
  "settings": [
    {
      "type": "header",
      "content": "Customer avatars"
    },
    {
      "type": "image_picker",
      "id": "avatar_1",
      "label": "Avatar 1"
    },
    {
      "type": "image_picker",
      "id": "avatar_2",
      "label": "Avatar 2"
    },
    {
      "type": "checkbox",
      "id": "show_third_avatar",
      "label": "Show third avatar",
      "default": true
    },
    {
      "type": "image_picker",
      "id": "avatar_3",
      "label": "Avatar 3"
    },
    {
      "type": "range",
      "id": "avatar_size",
      "min": 28,
      "max": 56,
      "step": 2,
      "unit": "px",
      "label": "Avatar size",
      "default": 36
    },
    {
      "type": "header",
      "content": "Trust message"
    },
    {
      "type": "inline_richtext",
      "id": "trust_message",
      "label": "Message",
      "default": "<strong>Sarah, Mike, and 2,847 others</strong> love this brand"
    },
    {
      "type": "range",
      "id": "text_size",
      "min": 12,
      "max": 18,
      "step": 1,
      "unit": "px",
      "label": "Text size",
      "default": 14
    },
    {
      "type": "header",
      "content": "Style"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text",
      "default": "#333333"
    },
    {
      "type": "color",
      "id": "placeholder_color",
      "label": "Placeholder",
      "default": "#e8e8e8"
    },
    {
      "type": "range",
      "id": "padding",
      "min": 0,
      "max": 24,
      "step": 2,
      "unit": "px",
      "label": "Padding",
      "default": 8
    },
    {
      "type": "range",
      "id": "desktop_width_percent",
      "label": "Desktop width",
      "min": 50,
      "max": 100,
      "step": 5,
      "unit": "%",
      "default": 100
    }
  ],
  "presets": [
    {
      "name": "Social proof bar"
    }
  ]
}
{% endschema %}
