{% doc %}
  @prompt
    collection navigation
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-collection-nav-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    padding: {{ block.settings.padding_vertical }}px 0;
    background-color: {{ block.settings.background_color }};
  }

  .ai-collection-nav__container-{{ ai_gen_id }} {
    max-width: 1600px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-collection-nav__title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.title_color }};
    margin: 0 0 {{ block.settings.spacing_below_title }}px;
    text-align: {{ block.settings.alignment }};
  }

  .ai-collection-nav__list-{{ ai_gen_id }} {
    display: flex;
    flex-wrap: wrap;
    gap: {{ block.settings.item_spacing }}px;
    list-style: none;
    margin: 0;
    padding: 0;
    {% if block.settings.alignment == 'center' %}
      justify-content: center;
    {% elsif block.settings.alignment == 'right' %}
      justify-content: flex-end;
    {% else %}
      justify-content: flex-start;
    {% endif %}
  }

  .ai-collection-nav__item-{{ ai_gen_id }} {
    margin: 0;
  }

  .ai-collection-nav__link-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: {{ block.settings.link_padding_vertical }}px {{ block.settings.link_padding_horizontal }}px;
    background-color: {{ block.settings.link_background }};
    color: {{ block.settings.link_color }};
    text-decoration: none;
    border-radius: {{ block.settings.link_border_radius }}px;
    font-size: {{ block.settings.link_font_size }}px;
    transition: all 0.3s ease;
    border: {{ block.settings.link_border_width }}px solid {{ block.settings.link_border_color }};
  }

  .ai-collection-nav__link-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.link_hover_background }};
    color: {{ block.settings.link_hover_color }};
    border-color: {{ block.settings.link_hover_border_color }};
    transform: translateY(-2px);
  }

  .ai-collection-nav__link-{{ ai_gen_id }}.active {
    background-color: {{ block.settings.link_active_background }};
    color: {{ block.settings.link_active_color }};
    border-color: {{ block.settings.link_active_border_color }};
  }

  .ai-collection-nav__count-{{ ai_gen_id }} {
    font-size: {{ block.settings.link_font_size | times: 0.85 }}px;
    opacity: 0.7;
  }

  @media screen and (max-width: 749px) {
    .ai-collection-nav__title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.85 }}px;
    }

    .ai-collection-nav__link-{{ ai_gen_id }} {
      font-size: {{ block.settings.link_font_size | times: 0.9 }}px;
      padding: {{ block.settings.link_padding_vertical | times: 0.8 }}px {{ block.settings.link_padding_horizontal | times: 0.8 }}px;
    }
  }
{% endstyle %}

<collection-navigation-{{ ai_gen_id }}
  class="ai-collection-nav-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-collection-nav__container-{{ ai_gen_id }}">
    {% if block.settings.title != blank %}
      <h2 class="ai-collection-nav__title-{{ ai_gen_id }}">{{ block.settings.title }}</h2>
    {% endif %}

    <ul class="ai-collection-nav__list-{{ ai_gen_id }}">
      {% if block.settings.show_all_link %}
        <li class="ai-collection-nav__item-{{ ai_gen_id }}">
          <a
            href="/collections/all"
            class="ai-collection-nav__link-{{ ai_gen_id }} {% if collection.handle == 'all' or collection == blank %}active{% endif %}"
          >
            {{ block.settings.all_link_text }}
          </a>
        </li>
      {% endif %}

      {% for collection_item in block.settings.collections %}
        <li class="ai-collection-nav__item-{{ ai_gen_id }}">
          <a
            href="{{ collection_item.url }}"
            class="ai-collection-nav__link-{{ ai_gen_id }} {% if collection.handle == collection_item.handle %}active{% endif %}"
          >
            {{ collection_item.title }}
            {% if block.settings.show_product_count %}
              <span class="ai-collection-nav__count-{{ ai_gen_id }}">({{ collection_item.products_count }})</span>
            {% endif %}
          </a>
        </li>
      {% endfor %}
    </ul>
  </div>
</collection-navigation-{{ ai_gen_id }}>

<script>
  (function() {
    class CollectionNavigation{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.links = this.querySelectorAll('.ai-collection-nav__link-{{ ai_gen_id }}');
        this.highlightActiveLink();
      }

      highlightActiveLink() {
        const currentPath = window.location.pathname;
        this.links.forEach(link => {
          if (link.getAttribute('href') === currentPath) {
            link.classList.add('active');
          }
        });
      }
    }

    customElements.define('collection-navigation-{{ ai_gen_id }}', CollectionNavigation{{ ai_gen_id }});
  })();
</script>

